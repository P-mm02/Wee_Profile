<% layout('layouts/boilerplate')%>

<section class="h-auto flex items-center justify-center py-8">
    <div class="grid grid-cols-3 bg-white shadow-lg border border-gray-300 " style="width: 794px; height: 1121px;">
        <div class="col-span-1 bg-blue-200 flex flex-col">
            <form id="uploadForm" action="/resume/uploadImg" method="POST" enctype="multipart/form-data">
                <div class="relative">
                    <img src="/img/profileImgTest.png" alt="myProfileImg">                
                    <button type="button" class="absolute bottom-1 bg-blue-500 rounded-full p-2 shadow-2xl hover:bg-blue-600 focus:outline-none" style="opacity: 0.75; right: 0.25rem">
                        <input type="file" name="resumeImg" id="resumeImg" class="absolute inset-0 w-full h-full opacity-0 cursor-pointer">
                        <img src="/img/UploadIcon.png" alt="Upload" class="w-6 h-6 pb-1">
                    </button>                
                </div>
            </form>
            <div>row</div>
            <div>row</div>
        </div>
        <div class="col-span-2 bg-green-200">Column 2</div>
    </div>
</section>
<script>
    document.getElementById('resumeImg').addEventListener('change', function() {
        document.getElementById('uploadForm').submit();
    });
</script>


