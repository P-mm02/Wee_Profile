<% layout('layouts/boilerplate')%>

<div class="bg-gray-100 p-8 rounded-lg shadow-lg text-center h-auto">
    <h1 class="text-4xl font-bold text-red-500 mb-4">Oops!</h1>
    <h2 class="text-4xl font-semibold text-gray-800 mb-2">Error <%= statusCode %></h2>
    <p class="text-2xl text-gray-700 mb-4"><%= err.message %></p>
    <a href="/home" class="inline-block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
        Go Back Home
    </a>
    <p class="text-gray-700 my-4"><%= err.stack %></p>
</div>